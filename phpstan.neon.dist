includes:
    - ./vendor/nunomaduro/larastan/extension.neon
parameters:
    level: 0
    paths:
        - packages
        - utils
    excludePaths:
        - packages/core/vendor
        - packages/admin/vendor
        - packages/licensing/vendor
        - utils/livewire-tables/vendor
        - utils/scout-database-engine/vendor
        # See: https://github.com/nunomaduro/larastan/issues/1644
        - packages/admin/src/Jobs/Products/GenerateVariants.php
    checkOctaneCompatibility: true
    ignoreErrors:
        -
            message: '#Unsafe usage of new static\(\).#'
            path: packages/core/src/Base/Traits/HasModelExtending.php
